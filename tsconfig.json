{
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "dist",
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "isolatedModules": true,
    "noEmit": true,
    "paths": {
      "@/*": ["src/*"]
    },
    "types": ["vite/client", "node"]
  },
  "include": ["./src/**/*", "vite.config.ks"],
  "exclude": ["node_modules", "dist", "public", "scripts"]
}
